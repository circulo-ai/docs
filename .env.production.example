# Copy this file to .env.production (or set these in Dokploy variables) before deploy.

POSTGRES_DB=docs_cms
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me
APP_DB_USER=payload_app
APP_DB_PASSWORD=change-me-too
POSTGRES_BACKUP_KEEP_DAYS=14
POSTGRES_BACKUP_INTERVAL_SECONDS=86400

PAYLOAD_SECRET=replace-with-a-long-random-secret

S3_BUCKET=payload-media
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=replace-with-a-strong-minio-password
S3_ENDPOINT=http://minio:9000
S3_FORCE_PATH_STYLE=true

# Docs <-> CMS connection
DOCS_SITE_URL=https://docs.example.com
DOCS_CMS_URL=http://cms:3000
DOCS_REVALIDATE_URL=http://docs:3001/api/revalidate/latest-version
DOCS_REVALIDATE_SECRET=replace-with-a-shared-revalidate-secret
DOCS_ALLOW_LOCAL_IP=true
DOCS_INCLUDE_DRAFTS=false
DOCS_EMAIL=
DOCS_PASSWORD=
INKEEP_API_KEY=

# Docs feedback (GitHub Discussions)
DOCS_FEEDBACK_GITHUB_OWNER=
DOCS_FEEDBACK_GITHUB_REPO=
DOCS_FEEDBACK_GITHUB_CATEGORY=Docs Feedback
GITHUB_APP_ID=
# Keep this on one line using literal \n escapes (not real line breaks), or compose .env parsing will fail.
# Example: GITHUB_APP_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\nMIIE...\n-----END RSA PRIVATE KEY-----
GITHUB_APP_PRIVATE_KEY=
