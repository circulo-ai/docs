DATABASE_URL=mongodb://127.0.0.1/your-database-name
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Storage (S3-compatible)
# For Docker MinIO, keep the defaults below.
# For AWS S3, set S3_ENDPOINT empty and S3_FORCE_PATH_STYLE=false.
S3_BUCKET=payload-media
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin123
S3_ENDPOINT=http://minio:9000
S3_FORCE_PATH_STYLE=true
MINIO_API_CORS_ALLOW_ORIGIN=http://localhost:3000
